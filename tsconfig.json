{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext",
         "types": ["node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "paths": {
            "src/*": ["src/*"],
            "tests/*": ["tests/cypress/**/*"]
        }
    },
    "include": ["**/*.ts"],
}
